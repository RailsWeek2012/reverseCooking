<h1>Listing recipes</h1>

<%= form_tag recipes_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search_re, params[:search_re] %>
      <%= submit_tag "Search by recipe title", :name => nil %>
    </p>
<% end %>


<%= form_tag ingredients_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search_in, params[:search_in] %>
      <%= submit_tag "Search by ingredients", :name => nil %>
    </p>
<% end %>


<table>
  <tr>
    <th>Recipes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recipes.each do |recipe| %>
  <tr>
    <td><%= recipe.name %></td>
    <td><%= link_to 'Show', recipe %></td>
    <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
    <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Recipe', new_recipe_path %>
<%= link_to 'Add new Ingredients', ingredients_path %>
